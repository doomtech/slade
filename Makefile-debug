
CXX=g++
CXXFLAGS=-g
LDFLAGS=-lfreeimage
CXXFLAGS+=`wx-config --version=2.9 --debug=yes --cxxflags std,aui,gl,stc`
LDFLAGS+=`wx-config --version=2.9 --debug=yes --libs std,aui,gl,stc`
EXE?=./dist/slade-dbg
SRC=$(wildcard src/*.cpp)
OBJ=$(patsubst %.cpp,%.o,${SRC})

all: slade

slade: ${OBJ}
	$(CXX) ${OBJ} -o $(EXE) $(LDFLAGS)

%.o: %.cpp
	$(CXX) -c $(CXXFLAGS) -o $@ $<

.PHONY : clean

clean:
	rm -f src/*.o slade

